@page
@model AdminModel
@inject QuizState QuizState

<h3>Admin Panel</h3>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="PosterFile" class="form-label">Upload Movie Poster:</label>
        <input asp-for="PosterFile" type="file" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ActualRuntime" class="form-label">Set Actual Runtime (minutes):</label>
        <input asp-for="ActualRuntime" type="number" class="form-control" />
    </div>
    <button type="submit" name="action" value="setup" class="btn btn-primary">Set up game</button>
    <button type="submit" name="action" value="reveal" class="btn btn-success ms-2">Reveal runtime</button>
</form>

@if (!string.IsNullOrEmpty(QuizState.PosterUrl))
{
    <div class="mt-4">
        <h4>Current Poster</h4>
        <img src="@QuizState.PosterUrl" alt="Current Poster" style="max-width:300px;" />
    </div>
}
